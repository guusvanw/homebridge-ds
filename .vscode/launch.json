        {
			"name": "Launch Homebridge",
			"request": "launch",
			"skipFiles": [
				"<node_internals>/**"
			],
			"type": "pwa-node",
			"preLaunchTask": "build",
			"windows": {
				"program": "${env:APPDATA}\\npm\\node_modules\\homebridge\\bin\\homebridge",
				"env": {
					"FORCE_COLOR": "1",
					"DEBUG": "homebridge-veml7700-sensor"
				}
			}
		}
